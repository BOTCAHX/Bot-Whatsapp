<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Whatsapp bot</title>
		<link href="https://fonts.googleapis.com/css2?family=Rototo&display=swap" rel="stylesheet">
		<style>
			@import url("https://fonts/googleapis.com/css2?=Roboto:wght@100&display=swap");
			body {
				font-family: Roboto;
			}
		</style>
	</head>
	<body class="bg-primary">
		<div class="container mt-5">
			<center><h5 class="text-white">Chat Bot</h5></center>
			<div class="card">
				<div class="card-body">
					<div id="message-list" style="height: 40vh; overflow-y: auto;">
						<div class="card">
					</div>
					<div id="form-message" class="mt-1">
						<div class="row">
							<form action="/send" method="POST">
								<div>
									<label for="send">POST</label>
									<input type="text" id="send" name="send" required>
								</div>
								<button type="submit">SendMessage</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
	<script src="/socket.io/socket.io.js"></script>
	<script>
		var socket = io();
		socket.emit("join");
		socket.on("join_user", (count) => {

		})
		socket.on("message", (text) => {
			$("#message-list").append(`
			<div class="card mt-1>
				<div class="card-body">
					${text}
					</div>
					</div>
					`)
		})
	</script>
</html>